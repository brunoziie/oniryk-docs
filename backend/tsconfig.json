{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@db:*": ["src/database/*"],
      "@app:*": ["src/*"]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
